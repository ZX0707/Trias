                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <select class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <select class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <select class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
