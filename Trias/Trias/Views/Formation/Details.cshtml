@model Trias.Models.FormationView

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutWithNothing.cshtml";
}

<style>
    .level1, .level2, .level3, .level4 {
        padding-left: 25px;
        line-height: 30px;
    }

    .co_li div {
        height: 100%;
        margin-top: 5px;
    }

    .co_li input {
        width: 70px;
    }

    .bian_ju {
        margin-bottom: 10px;
    }

    .colorTable th {
        width: 100px;
    }
</style>

<body style="overflow:auto">
    <div class="container">
        <div class="conta">

            <div class="display-label">
                @Html.DisplayNameFor(model => model.FormationName)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.FormationName)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.EnvironmentalZones)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.EnvironmentalZones)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.Thickness)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Thickness)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.Comments)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Comments)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.sort)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.sort)
            </div>

            <div>
                <table class="colorTable">
                    <thead>
                        <tr>
                            <th>颜色一</th>
                            <th>颜色儿</th>
                            <th>岩性一</th>
                            <th>岩性儿</th>
                            <th>主要岩性</th>
                            <th>关系</th>
                        </tr>
                    </thead>
                    <tbody id="tbody"></tbody>
                </table>
            </div>
        </div>
    </div>
</body>
<script>
    $(function() {
        $.post("@Url.Action("GetList","Rock")", { id: "@Model.F_ID" }, function (data) {
            console.log(data);
            $("#tbody").html("");
            for (var i = 0; i < data.length; i++) {
                var tr = $("<tr><td>" +
                    data[i].Color1 +
                    "</td><td>" +
                    data[i].Color2 +
                    "</td><td>" +
                    data[i].Lithology1 +
                    "</td><td>" +
                    data[i].Lithology2 +
                    "</td><td>" +
                    data[i].MainLithology +
                    "</td><td>" +
                    data[i].Relation +
                    "</td></tr>");
                $("#tbody").append(tr);
            }
        },"json");
    });
</script>