<script>
    $(function () {
        //移除必填项错误提示
        $(".required").on("focus", {}, function () {
            $(this).removeClass("error_ness");
        });
    });
    //前端验证
    function identify() {
        var arr = $(".required");
        var flag = true;
        for (var i = 0; i < arr.length; i++) {
            if ($(arr[i]).val() == "") {
                flag = false;
                $(arr[i]).addClass("error_ness");
            }
        }
        if (flag == false) {
            return flag;
        }
    }
</script>
