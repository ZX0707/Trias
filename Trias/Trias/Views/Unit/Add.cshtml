@{
    ViewBag.Title = "添加单元";
}

<form class="form-horizontal" role="form" method="post" style="padding: 20px; text-align: center;">
    <div class="form-group">
        <label class="col-sm-2 control-label">单元编号：</label>
        <div class="col-sm-2">
            <input name="U_ID" id="U_ID" type="number" placeholder="单元编号" class="form-control" />
        </div>
        <label class="col-sm-2 control-label">基准点：</label>
        <div class="col-sm-2">
            <select name="ContactBase" id="ContactBase" class="form-control"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">外观：</label>
        <div class="col-sm-2">
            <input name="Facies" id="Facies" type="number" placeholder="外观" class="form-control" />
        </div>
        <label class="col-sm-2 control-label">沉积环境：</label>
        <div class="col-sm-2">
            <select name="Environments" id="Environments" class="form-control"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">厚度：</label>
        <div class="col-sm-2">
            <input name="Thickness" id="Thickness" type="number" placeholder="厚度" class="form-control" />
        </div>
        <div class="col-sm-2" style="width: auto">
            <select class="form-control">
                <option>米</option>
                <option>英寸</option>
                <option>厘米</option>
            </select>
        </div>
    </div>
    <div>
        <div class="form-group">
            <label class="col-sm-1">颜色1</label>
            <label class="col-sm-1">颜色2</label>
            <label class="col-sm-2">岩性1</label>
            <label class="col-sm-2">岩性2</label>
            <label class="col-sm-3">主要岩性</label>
            <label class="col-sm-3">关系</label>
        </div>
        <div class="form-group">
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <select class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <select class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <select class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-1">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <input class="form-control" />
            </div>
            <div class="col-sm-3">
                <button type="button" class="btn btn-info" style="width: 100%;">从岩石组拷贝</button>
            </div>
        </div>

    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="name">备注：</label>
        <div class="col-sm-7">
            <textarea name="Details" id="Details" class="form-control" rows="3" placeholder="备注" style="resize: none"></textarea>
        </div>
    </div>
    <div class="form-group" style="text-align: center">
        <button type="button" class="btn btn-default">确定</button>
    </div>
</form>
